@page
@model HelpDeskUnipAssis2.Pages.Tickets.EditModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ticket.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Ticket.Titulo" class="control-label"></label>
                <input asp-for="Ticket.Titulo" class="form-control" />
                <span asp-validation-for="Ticket.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Ticket.Descricao" class="control-label"></label>
                <input asp-for="Ticket.Descricao" class="form-control" />
                <span asp-validation-for="Ticket.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.DataAbertura" class="control-label"></label>
                <input asp-for="Ticket.DataAbertura" class="form-control" />
                <span asp-validation-for="Ticket.DataAbertura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.UsuarioId" class="control-label"></label>
                <select asp-for="Ticket.UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                <span asp-validation-for="Ticket.UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
