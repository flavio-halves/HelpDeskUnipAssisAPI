@page
@model HelpDeskUnipAssis.Pages.Tickets.IndexModel
@{
    ViewData["Title"] = "Lista de Tickets";
}

<h2>📋 Lista de Tickets</h2>

<div style="margin-bottom:20px;">
    <a asp-page="Create" class="btn btn-primary">➕ Abrir novo Ticket</a>
    <a asp-page="/Login" class="btn btn-danger" style="margin-left:10px;">🚪 Sair</a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descrição</th>
            <th>Data Abertura</th>
            <th>Usuário</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaTickets)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Descricao</td>
                <td>@item.DataAbertura.ToString("dd/MM/yyyy")</td>
                <td>@item.Usuario?.Nome</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">✏ Editar</a>
                    <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">🔎 Detalhes</a>
                    <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑 Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
